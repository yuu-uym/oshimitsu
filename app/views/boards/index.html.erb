<div class="relative">
  <%= render "shared/header" %>
  <div class='main'>

    <div class ="page-title">
      <br><h1 class="genre-title">掲示板ページ</h1>
    </div>

    <%# 各種リンク %>
    <div class="bbs-links">
      <%= form_with url: search_boards_path, local: true, method: :get, class: "search-form" do |f| %>
        <%= f.text_field :keyword, placeholder: "掲示板を検索する", class: "search-input" %>
        <%= f.submit "検索", class: "search-btn" %>
      <% end %>
      <%= link_to "新規作成",  new_board_path,class:"bbs-link"%>
    </div>
    
     <%# 掲示板一覧 %>
    <div class="bbs-titles">
      <% @boards.each do |boards| %>
      <div class="bbs-title">
        <span class="heading"><%= link_to "#{boards.title}",board_path(boards.id) %></span>
        <%= boards.user.nickname %>
        <%= l boards.created_at %>
        <div class="bbs-overview"><%= boards.overview %></div>
      </div>
    <%end%>
    </div>

  </div>
<%= render "shared/footer" %>
</div>
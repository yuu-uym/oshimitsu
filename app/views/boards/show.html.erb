<div class="relative">
  <%= render "shared/header" %>
  <div class='main'>

    <div class ="page-title">
      <br><h1 class="genre-title"><%="#{@board.title}"%></h1>
      <%=link_to 'もどる', boards_path, class: "genre_btn" %>
      <% if current_user.id == @board.user.id%>
        <%= link_to '編集',  edit_board_path, class: "genre_btn" %>
        <%= link_to '削除', boards_path, method: :delete, class:'genre_btn' ,data: { confirm: '削除しますか？' } %>
      <%end%>
    </div>

    <div class="bbs-title">
        <%= "#{@board.user.nickname}さんの投稿" %><%= l @board.created_at %>
        <div class="bbs-overview"><%= @board.overview %></div>
    </div>

    <%# コメント %>
    <div class="bbs-comment">
    <%= form_with(model: [@board, @comment], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
        <%= form.submit "SEND" %>
      <% end %>
    </div>
    
    <div class="bbs-title">
    <h4>＜コメント一覧＞</h4>
      <% @comments.each do |comment| %>
        <p>
          <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
          <%= comment.text %>
        </p>
      <% end %>
    </div>
    

  </div>
<%= render "shared/footer" %>
</div>
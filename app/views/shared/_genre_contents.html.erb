<div class='genre-contents'>
  <%genres = @genres%>
  <%@mygenres = current_user.genres%>
    <% @mygenres.each do |genre| %>
      <li class='list'>
        <%= link_to genre_path(genre.id) do %>
        <div class='item-img-content'>
          <%= image_tag genre.image, class: "item-img" %>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= "#{genre.theme}のお部屋" %>
          </h3>
          <div class='item-price'>
            <span>月額<%= genre.set_amount %>円まで</span>
          </div>
        </div>
        <% end %>
      </li>
    <% end %>
</div>
 <%= render "shared/header" %>
<div class="items-sell-contents">
  <div class="items-sell-main">
    <h2 class="items-sell-title">アイテムの情報を入力</h2>
    <%= form_with model: @item, url: genre_items_path, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %> 

    <%# 商品名 %>
    <div class="new-items">
      <div class="weight-bold-text">
        商品名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :theme, class:"items-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
    </div>
    <%# /商品名 %>

    <%#アイテム詳細 %>
    <div class="items-detail">
      <div class="form">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id  , Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id  , Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
     </div>
    </div>
    <%# /アイテム詳細 %>

    <div class="sell-btn-contents">
      <%= f.submit "登録する", class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>

  </div>
  <% end %>
  <%= render "shared/footer" %>
</div>
<%= render "shared/header" %>

<div class="input-contents">
  <div class="input-main">
    <h2 class="input-title">推しの情報の修正</h2>
     <%= form_with model: @genre, url: genre_path, local: true do |f| %>

      <%= render 'shared/error_messages', model: f.object %>

    <%# 推しアイコン %>
    <div class="img-upload">
      <div class="weight-bold-text">
        アイコン画像
      </div>
      <div class="click-upload">
        <p>クリックしてファイルをアップロード</p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>

    <%# 推し名 %>
    <div class="new-items">
      <div class="weight-bold-text">
        推しの名前
        <span class="indispensable">必須</span>
      </div>
        <%= f.text_area :theme, class:"items-text", id:"item-name", placeholder:"テーマ（必須 40文字まで)", maxlength:"40" %>
    </div>

    <%# 月額上限設定 %>
   <div class="set-amount">
      <div class="weight-bold-text">
         月額上限
        <span class="indispensable">必須</span>
         <%= f.text_field :set_amount, class:"price-input", id:"item-price", placeholder:"例）30,000" %>
          <span class="price-yen">円</span>
        </div>
        </span>
    </div>
    
    <div class="input-btn-contents">
      <%= f.submit "登録する", class:"input-btn" %>
      <%=link_to 'もどる', :back, class:"back-btn" %>
    </div>
    
    <% end %> 
  </div>
</div>

<%= render "shared/footer" %>

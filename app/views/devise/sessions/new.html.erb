<div class="input-contents">
<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>

  <div class='form-header'>
    <h3 class='form-header-text'>
      ログイン情報入力
    </h3>
  </div>

  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"６文字以上の半角英数字" %>
  </div>
  <div class="input-btn-contents">
      <%= f.submit "ログイン", class:"input-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>

</div>

<% end %>
</div>

